<?xml version="1.0" encoding="UTF-8"?>
<schema
    xmlns="http://www.concrete5.org/doctrine-xml/0.5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 https://concretecms.github.io/doctrine-xml/doctrine-xml-0.5.xsd"
>

    <table name="btCTSearchPackages">
        <field name="bID" type="integer">
            <unsigned/>
            <key/>
        </field>
        <field name="resultsPerPage" type="integer">
            <unsigned/>
            <notnull/>
        </field>
        <field name="allowedDownloadFormats" type="string" size="255">
            <notnull/>
        </field>
        <field name="allowedDownloadFor" type="string" size="30">
            <notnull/>
        </field>
    </table>

</schema>
